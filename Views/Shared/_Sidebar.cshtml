<div class="nav flex-column">
    <a href="@Url.Action("Index", "MyHome")" class="nav-link active">
        <i class="fas fa-home"></i>
        <span class="link-text">Dashboard</span>
    </a>
    <a href="@Url.Action("AllTransaction", "Transaction")" class="nav-link">
        <i class="fas fa-list"></i>
        <span class="link-text">Transactions</span>
    </a>
    <a href="@Url.Action("AddTransaction", "Transaction")" class="nav-link">
        <i class="fas fa-add"></i>
        <span class="link-text">Aggiungi</span>
    </a>
    @if (User.Identity.IsAuthenticated)
    {
        using (Html.BeginForm("Logout", "Auth", FormMethod.Post, new { @class = "nav-link" }))
        {
            @Html.AntiForgeryToken()
            <button type="submit" style="border: none; background: none; padding: 0; color: inherit; cursor: pointer;">
                <i class="fas fa-sign-out-alt text-danger"></i>
                <span class="link-text">Logout</span>
            </button>
        }
    }
    else
    {
        <a href="@Url.Action("Login", "Auth")" class="nav-link">
            <i class="fas fa-sign-in-alt text-success"></i>
            <span class="link-text">Login</span>
        </a>
    }


</div>
