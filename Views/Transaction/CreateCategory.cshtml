@model MyFinance.Models.Category

@{
    ViewBag.Title = "CreateCategory";
}

<h2 class="mb-3">Crea Categoria</h2>
@using (Html.BeginForm("CreateCategory", "Transaction", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="form-group mb-3">
            <div class="col-md-10">
                @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control custom-form", placeholder = "Nome Categoria" } })
                @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-check">
            @Html.CheckBox("isIncome", false, new { @class = "form-check-input bg-transparent border-white" })
            @Html.Label("isIncome", "Entrata*", new { @class = "form-check-label" })

        </div>
        <p>* Spunta se si tratta di un'entrata senò procedi senza spuntare</p>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-success">
                <i class="fas fa-plus"></i> Aggiungi
            </button>
        </div>
    </div>
}

<style>
    .custom-form {
        background-color: #222b33;
        color: white;
        border: none;
        border-radius: 5px;
        padding: 8px 12px;
    }

        .custom-form:focus {
            background-color: #222b33;
            color: white;
            outline: none;
        }

        .custom-form::placeholder {
            color: white;
        }
</style>
